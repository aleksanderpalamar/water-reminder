generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @map("_id")
  waterIntakes WaterIntake[]
  reminders    Reminder[]
}

model WaterIntake {
  id     String   @id @default(cuid()) @map("_id")
  userId String
  amount Int
  date   DateTime @default(now())
  user   User     @relation(fields: [userId], references: [id])
}

model Reminder {
  id            String   @id @default(cuid()) @map("_id")
  userId        String
  containerSize Int
  reminderTime  String
  date          DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
}
